@model RegisterViewModel
<div class="container py-5">
    <div class="card mb-4" id="forms">
        <div class="card-body">
            <form asp-area="" asp-controller="Account" asp-action="Register" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
                <fieldset>
                    <legend>Регистрация</legend>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" id="exampleInputEmail" type="text" placeholder="Введите логин">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" id="exampleInputUserName" type="text" placeholder="Введите логин">
                        <span asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" id="exampleInputPassword" type="password" placeholder="Введите пароль">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordConfirm"></label><br />
                        <input asp-for="PasswordConfirm" class="form-control" id="exampleInputPassword" type="password" placeholder="Подтвердите пароль"/>
                        <span asp-validation-for="PasswordConfirm"></span>
                    </div>
                    <button class="btn btn-primary" type="submit">Регистрация</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>