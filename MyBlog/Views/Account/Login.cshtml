@model LoginViewModel
    <div class="container py-5">
        <div class="card mb-4" id="forms">
            <div class="card-body">
                <form asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
                    <fieldset>
                        <legend>Вход в личный кабинет</legend>
                        <div asp-validation-summary="All"></div>
                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" class="form-control" id="exampleInputEmail" type="text" placeholder="Введите логин">
                            <span asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" id="exampleInputPassword" type="password" placeholder="Введите пароль">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-check form-group">
                            <input asp-for="RememberMe" class="form-check-input" id="checkbox-1" type="checkbox">
                            <label asp-for="RememberMe" class="form-check-label" for="checkbox-1">Запомнить меня</label>
                            <span asp-validation-for="RememberMe"></span>
                        </div>
                        <button class="btn btn-primary" type="submit">Войти</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>