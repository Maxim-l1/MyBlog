@model EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<div class="container py-5">
    <a asp-area="admin" asp-controller="Home" asp-action="Index">Вернуться на панель администратора</a>
    <div class="card mb-4" id="forms">
        <div class="card-body">
            <form asp-area="Admin" asp-controller="Users" asp-action="Edit" method="post">
                <fieldset>
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" id="exampleInputEmail" type="text" placeholder="Введите логин">
                        <span asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" id="exampleInputUserName" type="text" placeholder="Введите логин">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <button class="btn btn-primary" type="submit">Сохранить</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>