@model CreateUserViewModel
@{
    ViewBag.Title = "Добавление пользователя";
}
<div class="container py-5">
    <a asp-area="admin" asp-controller="Home" asp-action="Index">Вернуться на панель администратора</a>
    <div class="card mb-4" id="forms">
        <div class="card-body">
            <form asp-area="Admin" asp-controller="Users" asp-action="Create" method="post">
                <fieldset>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" id="exampleInputEmail" type="text" placeholder="Введите логин">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" id="exampleInputUserName" type="text" placeholder="Введите логин">
                        <span asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" id="exampleInputPassword" type="password" placeholder="Введите пароль">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <button class="btn btn-primary" type="submit">Добавить</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>
