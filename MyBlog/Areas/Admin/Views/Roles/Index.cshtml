@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<div class="container py-5">
    <a asp-area="admin" asp-controller="Home" asp-action="Index">Вернуться на панель администратора</a>
    <div class="card mb-4" id="tables">
        <div class="card-header">Список ролей</div>
        <div class="card-body">
            <table class="table table-hover">
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td>
                                <form asp-area="Admin" asp-action="Delete" asp-route-id="@role.Id" method="post">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Удалить
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-area="Admin" asp-controller="Roles" asp-action="Create">Добавить роль</a>
            <a asp-area="Admin" asp-controller="Roles" asp-action="UserList">Список пользователей</a>
        </div>
    </div>
</div>